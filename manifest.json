{
  "manifest_version": 3,
  "name": "Simple Highlight Tracker",
  "version": "1.0",
  "description": "Highlight text on a page and track it in a popup.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
